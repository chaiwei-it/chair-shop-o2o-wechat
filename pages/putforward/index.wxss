/* pages/putforward/index.wxss */
page{
  background-color: #fff;
}
.balance{
  height: 160rpx;
  width: 750rpx;
  text-align: center;
  line-height: 120rpx;
  font-size: 28rpx;
  background-color: #f79307;
  color: #fff;
}

.details{
  width: 690rpx;
  /* height: 500rpx; */
  position: absolute;
  left: 30rpx;
  top: 120rpx;
  background-color: #fff;
  border-radius:8px 8px 0px 0px;
  padding-top: 30rpx;
}

.form-item {
    box-sizing: border-box;
    display: flex;
    width: 100%;
    height: 86rpx;
    padding: 10rpx 40rpx;
    background-color: #fff;
    border-bottom: 1px solid #d5d5d5;
}

.form-item-hd {
    width: 200rpx;
    height: 66rpx;
    line-height: 66rpx;
}

.form-item-bd {
    height: 66rpx;
}

input, .input {
    box-sizing: border-box;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #fff;
    padding: 0 15rpx;
}

.input-placeholder {
    color: #ccc;
}

.save-btn {
    width: 690rpx;
    height: 80rpx;
    margin-top: 40rpx;
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
    background-color: #f79307;
    border-radius: 6rpx;
    color: #fff;
}

.to-list{
  margin-left: 570rpx;
  margin-top: 480rpx;
  width: 150rpx;
}

.list-image{
  width: 150rpx;
  height: 44rpx;
}