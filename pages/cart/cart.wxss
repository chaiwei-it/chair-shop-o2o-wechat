@import '../common/common.wxss';

.cart{
  border-top: 1rpx solid #e9e9e9;
}
.cart-person{
  position: relative;
  /* padding: 20rpx 20rpx 20rpx 285rpx; */
  height: 180rpx;
  border-bottom: 1rpx solid #e9e9e9;
}
.cart-select{
  position: absolute;
  left: 30rpx;
  top: 80rpx;
  width: 40rpx;
  height: 40rpx;
}

.cart-image{
  position: absolute;
  top: 30rpx;
  left: 80rpx;
  width: 120rpx;
  height: 120rpx;
}

.cart-image image {
  width: 100%;
  height: 100%;
}
.cart-name{
  position: absolute;
  display: inline-block;
  top: 30rpx;
  left: 220rpx;
  width: 300rpx;
  height: 32rpx;
  line-height: 32rpx;
  overflow: hidden;
}
.cart-specInfo{
  position: absolute;
  display: inline-block;
  top: 88rpx;
  left: 220rpx;
  width: 300rpx;
  height: 24rpx;
  line-height: 24rpx;
  overflow: hidden;
  color: #d0d0d0;
  font-size: 24rpx;
}
.cart-price{
  position: absolute;
  display: inline-block;
  top: 134rpx;
  left: 220rpx;
  width: 300rpx;
  height: 24rpx;
  line-height: 24rpx;
  font-size: 24rpx;
  color: #ff0000;
}
.cart-count{
  position: absolute;
  left: 586rpx;
  top: 120rpx;
  width: 140rpx;
  height: 40rpx;
  display: flex;
  flex-direction:row;
}
.cart-count-down,.cart-count-add{
  font-size: 40rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #999999;
}
.cart-count-num{
  width: 40rpx;
  height: 60rpx;
  line-height: 40rpx;
  text-align: center;
}

.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 750rpx;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 100rpx 0 80rpx;
    box-sizing: border-box;
    background: #f8a531;
    color: #fff;
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}

.cart-toatl-price{
  /* width: 140rpx;    */
  position: absolute;
  right: 172rpx;
  top: 0;
}

.order-icon{
  position: absolute;
  right: 0;
  top: 0;
  width: 152rpx;
  height: 90rpx;
  background: #f78307;
  text-align: center;
}



.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}