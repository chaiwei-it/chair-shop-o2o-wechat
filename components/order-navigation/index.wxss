.cw-order-list {
  width: 100%;
  height: 100%;
  background-color: #fff;
  position: relative;
}

.image {
  width: 50%;
  height: 50%;
  margin:10% 25%;
}

.name {
  width: 100%;
  height: 30%;
  line-height: 30%;
  font-size: 24rpx;
  text-align: center
}

.order-num {
  position:absolute;
  top:15rpx;
  left:76rpx;
  border-radius:50%;
  font-size: 10px;
  color: red;
  border: 1px solid red;
  text-align: center;
  height: 14px;
  width: 14px;
  line-height: 14px;
  background-color: #FFF;
}