/* components/order/index.wxss */

.cw-order-list {
  width: 100%;
  height: 100%;
  background-color: #fff;
  box-sizing: border-box;
  border: solid 1rpx #eeeeee;

}

.order-top{
  height: 50rpx;
  border-bottom: solid 1rpx #eeeeee;
  width: 100%;
  flex-direction:row;
  display: flex;
}

.order-id{
  margin-left: 16rpx;
  width: 550rpx;
  line-height: 50rpx;
  font-size: 20rpx;
}

.order-status{
  width: 120rpx;
  line-height: 50rpx;
  font-size: 20rpx;
  color: #ff0000;
  text-align: center
}

.order-goods {
  height: 160rpx;
  width: 100%;
  position: relative;
}

.goods-image {
  position: absolute;
  width: 130rpx;
  height: 130rpx;
  left: 15rpx;
  top: 15rpx;
}

.goods-name {
  position: absolute;
  width: 460rpx;
  height: 28rpx;
  left: 160rpx;
  top: 20rpx;
  line-height: 28rpx;
  font-size: 28rpx;
}

.goods-num {
  position: absolute;
  width: 460rpx;
  height: 24rpx;
  left: 160rpx;
  top: 64rpx;
  line-height: 24rpx;
  font-size: 24rpx;
  color: #999999;
}

.goods-price {
  position: absolute;
  width: 460rpx;
  height: 20rpx;
  left: 160rpx;
  top: 114rpx;
  line-height: 20rpx;
  font-size: 20rpx;
  color: #ff0000;
}

.order-details{
  height: 50rpx;
  border-top: solid 1rpx #eeeeee;
}

.goods-total{
  float: left;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 8rpx;
  font-size: 22rpx;
}

.order-status-button{
  float: right;
  height: 50rpx;
  line-height: 50rpx;
  flex-direction:row;
  display: flex;
}

.order-button{
  height: 30rpx;
  width: 100rpx;
  margin: 8rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 18rpx;
  border-radius: 6px 6px 6px 6px;
}

.order-button-error{
  border: solid 2rpx #b5b5b5;
  color: #b5b5b5;
}

.order-button-success{
  border: solid 2rpx #f79307;
  color: #f79307;
}