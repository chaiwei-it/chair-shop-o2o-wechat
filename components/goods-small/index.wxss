/* components/recommend/index.wxss */
.cw-goods {
  width: 328rpx;
  height: 446rpx;
  border: 1px solid #f7f7f7;

}

.goods-image {
  width: 328rpx;
  height: 328rpx;
  position:relative;
  border-bottom: 1px solid #f7f7f7;
}
.goods-activity{
  position:absolute;
  top:5px;
  left:5px;
  height:14px;
  width:45px;
  border-radius:7px 7px 7px 7px;
  border: 2px solid #bdb6a4;
  font-size: 10px;
  color: #bdb6a4;
  text-align: center;
  line-height: 14px;
}

.goods-name{
  height: 48rpx;
  margin-left: 10rpx;
}

.goods-name-text{
  font-size: 28rpx;
  line-height: 48rpx;
  display:-webkit-box; 
  -webkit-line-clamp:1; 
  -webkit-box-orient:vertical;
  overflow:hidden; 
  /* text-align: center; */
}

.goods-details{
  display: flex; 
  flex-direction:row;
  height: 48rpx;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}

.goods-price{
  display: flex; 
  flex-direction:row;
  height: 48rpx;
  width: 50%;
  margin-left: 10rpx;
}

.goods-price-text{
  font-size: 24rpx;
  color: red;
  height: 48rpx;
  line-height: 48rpx;
}

.old-price{
  margin-left: 20rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 20rpx;
  text-decoration: line-through;
}

.goods-status{
  float: right;
  font-size: 12px;
  height: 20px;
  min-width: 50px;
  line-height: 20px;
  margin-right: 10px;
  color: #c06892;
  font-weight: bolder;
}